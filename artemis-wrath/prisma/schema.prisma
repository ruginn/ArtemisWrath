// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id           String    @unique
  email        String?   @unique
  name         String?
  createdAt    DateTime  @default(now())
  lastPackDate DateTime?
  starterDeck  Boolean   @default(false)
  crystals Int? @default(500)
  cards PlayerCard[]
}

model Jefftron {
  id String @unique
  name String?
  test Int?
}


model Card {
  id String @unique
  name String?
  description String?
  randomNumber Int?
  image String?
  tinyImage String?
  inclination String
  inclination2 String?
  effect String?
  biome String?
  effectFunction String?
  rarity String?
  type String?
  attackPower Int?
  hp Int?
  cost Int?
  set Set @relation(fields: [setId], references: [id])
  setId String
}

model PlayerCard {
  id String @unique
  name String?
  description String?
  randomNumber Int?
  image String?
  tinyImage String?
  inclination String?
  inclination2 String?
  effect String?
  biome String?
  effectFunction String?
  rarity String?
  type String?
  attackPower Int?
  hp Int?
  cost Int?
  userId String
  user User @relation(fields: [userId], references: [id])
}

model Set {
  id String @unique
  name String
  cards Card[]
}

